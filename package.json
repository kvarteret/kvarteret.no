    "start:kvarteret": "lerna run --scope kvarteret --stream dev",
    "build:kvarteret": "lerna run --scope kvarteret --stream build",
    "run:build:kvarteret": "lerna run --scope kvarteret --stream start"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
