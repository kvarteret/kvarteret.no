{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "yarn install && lerna bootstrap",
    "bootstrap-frozen": "yarn install --frozen-lockfile && lerna bootstrap",
    "start": "lerna run start --parallel",
    "start:blifrivillig": "lerna run --scope blifrivillig --stream dev",
    "build:blifrivillig": "lerna run --scope blifrivillig --stream build",
    "run:build:blifrivillig": "lerna run --scope blifrivillig --stream start",
    "start:kvarteret": "lerna run --scope kvarteret --stream dev",
    "build:kvarteret": "lerna run --scope kvarteret --stream build",
    "run:build:kvarteret": "lerna run --scope kvarteret --stream start"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "lerna": "^4.0.0",
    "next": "^12.0.4"
  }
}
