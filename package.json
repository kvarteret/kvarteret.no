{
  "name": "root",
  "private": true,
  "devDependencies": {
    "lerna": "^3.22.1"
  },
  "scripts": {
    "bootstrap": "yarn install && lerna bootstrap",
    "start": "lerna run start --parallel",
    "start:blifrivillig": "lerna run --scope blifrivillig --stream dev",
